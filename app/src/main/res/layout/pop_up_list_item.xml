<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appThemeTextColorLight">

    <ImageView
        android:id="@+id/iv_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/vehicle_open1_selected" />

    <com.prts.pickccustomer.constants.PickCCustomTextVIew
        android:id="@+id/text1_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingLeft="40dp"
        android:text="Un loading"
        android:maxLines="1"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/appThemeYellow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>