<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/broderline"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:id="@+id/b_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/broderline"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="Booking Number"
                android:textColor="@color/appThemeYellow"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/broderline"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="15dp"

                android:textColor="@color/appThemeYellow"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.prts.pickccustomer.constants.PickCCustomTextVIew
                    android:id="@+id/cash_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="0.1dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginRight="0.1dp"
                    android:layout_marginTop="0.1dp"
                    android:background="@drawable/cashpaymentbutton"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="CASH PAYMENT"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/cash_button"
                    android:layout_alignLeft="@+id/cash_button"
                    android:layout_alignStart="@+id/cash_button"
                    android:layout_alignTop="@+id/cash_button"
                    android:layout_marginLeft="30dp"
                    android:elevation="10dp"
                    android:src="@drawable/cash_payments" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.prts.pickccustomer.constants.PickCCustomTextVIew
                    android:id="@+id/online_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="0.1dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginRight="0.1dp"
                    android:layout_marginTop="0.1dp"
                    android:background="@drawable/cashpaymentbutton"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="ONLINE PAYMENT"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/online_button"
                    android:layout_alignTop="@+id/online_button"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:elevation="10dp"
                    android:src="@drawable/online_payments" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>