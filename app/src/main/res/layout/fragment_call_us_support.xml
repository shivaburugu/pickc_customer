<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0.1dp"
    android:paddingBottom="0.1dp"
    android:background="#000000"
    tools:context="com.prts.pickccustomer.support.WriteToUsSupportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nedd_help_RL"
        android:background="@color/appThemeBgColorDark"
        android:elevation="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true">

        <com.prts.pickccustomer.constants.PickCCustomTextVIew
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For immediate assistance"
            android:padding="5dp"
            android:id="@+id/need_additional_help_TV"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_below="@+id/need_additional_help_TV">
            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL US"
                android:padding="5dp"
                android:minWidth="100dp"
                android:textColor="#0000ff"
                android:id="@+id/call_us_TV"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
