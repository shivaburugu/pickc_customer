<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prts.pickccustomer.support.SupportActivityCreatePickCAccount">


    <com.prts.pickccustomer.constants.PickCCustomTextVIew
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Some text here.\n\n\n\n\n\n\n\n\n\n\n\n"
        android:id="@+id/desc_create_support_TV"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nedd_help_RL"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/desc_create_support_TV">

        <com.prts.pickccustomer.constants.PickCCustomTextVIew
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Related topics"
            android:id="@+id/relatedTopics_TV"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_below="@+id/relatedTopics_TV">
            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="link 1"
                android:padding="5dp"
                android:textColor="#0000ff"
                android:id="@+id/link_1_TV"/>
            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="link 2"
                android:padding="5dp"
                android:textColor="#0000ff"
                android:id="@+id/link_2_TV"/>
            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="link 3"
                android:padding="5dp"
                android:textColor="#0000ff"
                android:id="@+id/link_3_TV"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nedd_help_RL"
        android:background="@color/appThemeBgColorDark"
        android:elevation="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true">

        <com.prts.pickccustomer.constants.PickCCustomTextVIew
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need additional help ?"
            android:padding="5dp"
            android:id="@+id/need_additional_help_TV"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_below="@+id/need_additional_help_TV">
        <com.prts.pickccustomer.constants.PickCCustomTextVIew
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL US"
            android:padding="5dp"
            android:minWidth="100dp"
            android:textColor="#0000ff"
            android:id="@+id/call_us_TV"/>
            <com.prts.pickccustomer.constants.PickCCustomTextVIew
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WRITE US"
                android:minWidth="100dp"
                android:padding="5dp"
                android:textColor="#0000ff"
                android:id="@+id/write_us_TV"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
