<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/appThemeBgColorDark">


        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 192"
            android:textColor="@color/appThemeTextColorLight"
            android:textSize="50sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/overlapImage"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/paid_stamp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/sampletruck"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_gravity="center"
            android:maxHeight="30dp"
            android:minHeight="50dp"
            android:padding="4dp"
            android:src="@drawable/open_selected_1_ton" />

        <TextView
            android:id="@+id/truckCategryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Mini - "
            android:textColor="@color/appThemeTextColorLight"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/truckTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Open Truck"
            android:textColor="@color/appThemeTextColorLight"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.07" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rate_card_bg_inner_top_right">
    <ImageView
        android:id="@+id/source_flag_IV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        
        android:background="@drawable/rate_card_bg_inner_top_left"
        android:maxHeight="30dp"
        android:minHeight="50dp"
        android:padding="4dp"
        android:src="@drawable/source" />

        <TextView
            android:id="@+id/from_location_address_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/source_flag_IV"
            android:background="@drawable/rate_card_bg_inner_top_right"
            android:gravity="left|center"
            android:maxLines="2"
            android:minHeight="20dp"
            android:padding="2dp"
            android:text="Street No1, Veerareddy Colony,Nacharam, Hyderabad"
            android:textColor="@color/appThemeTextColorLight"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rate_card_bg_inner_top_right"
        android:orientation="horizontal"
       
        >
        <ImageView
            android:id="@+id/dest_flag_IV"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/rate_card_bg_inner_top_left"
            android:maxHeight="30dp"
            android:minHeight="50dp"
            android:padding="4dp"
            android:src="@drawable/destination" />
        <TextView
            android:id="@+id/dest_location_address_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/source_flag_IV"
            android:background="@drawable/rate_card_bg_inner_top_right"
            android:gravity="left|center"
            android:maxLines="2"
            android:minHeight="20dp"
            android:padding="2dp"
            android:textSize="10sp"
            android:text="Street No1, Veerareddy Colony,Nacharam, Hyderabad"
            android:textColor="@color/appThemeTextColorLight" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:elevation="14dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/driverNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ramesh"
                android:textColor="@color/appThemeTextColorLight"
                android:textSize="16sp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView

                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:layout_height="20dp"
                android:layout_width="50dp"
                android:src="@drawable/rating_single_star"
                />
                <TextView
                    android:id="@+id/avgratingTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Driver Rating is "

                    android:textColor="@color/appThemeTextColorLight"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <RatingBar
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"

                />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:padding="2dp"
                android:src="@drawable/driver_dummy_100x100" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"
        android:padding="5dp"
        android:text="Rate the driver" />

</LinearLayout>