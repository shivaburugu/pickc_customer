<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/appThemeYellow</item>
        <item name="android:textColorSecondary">@color/appThemeYellow</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>
    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/appThemeBgColorLight</item>
        <item name="android:textColorPrimary">@color/appThemeBgColorLight</item>
    </style>
    <style name="AppDialogTheme1" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->

    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@drawable/rate_card_bg</item>
        <item name="android:bottomDark">@drawable/rate_card_bg</item>
        <item name="android:bottomMedium">@drawable/rate_card_bg</item>
        <item name="android:centerBright">@drawable/rate_card_bg</item>
        <item name="android:centerDark">@drawable/rate_card_bg</item>
        <item name="android:centerMedium">@drawable/rate_card_bg</item>
        <item name="android:fullBright">@drawable/rate_card_bg</item>
        <item name="android:fullDark">@drawable/rate_card_bg</item>
        <item name="android:topBright">@drawable/rate_card_bg</item>
        <item name="android:topDark">@drawable/rate_card_bg</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!--Todo Navigation Drawer style started-->
    <style name="NavDrawerAppTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:textColorPrimary">@color/appThemeYellow</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/appThemeYellow</item>
    </style>

    <!--   <style name="AppTheme" parent="Theme.AppCompat.Light">
           &lt;!&ndash; This is the styling for action bar &ndash;&gt;
           <item name="actionBarStyle">@style/MyActionBar</item>
           &lt;!&ndash;To change the text styling of options menu items</item>&ndash;&gt;
           <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
           &lt;!&ndash;To change the background of options menu&ndash;&gt;
           <item name="android:itemBackground">@color/skyBlue</item>
       </style>-->

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/appThemeTextColorDark</item>
    </style>



    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/appThemeYellow</item>
        <item name="actionMenuTextColor">@color/navColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/navColorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>
    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/nav_ic_menu_moreoverflow</item>
    </style>
    <color name="navColorPrimary">@color/colorPrimary</color>
    <color name="navColorPrimaryDark">@color/colorPrimaryDark</color>

    <color name="white">#ffffff</color>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/appThemeBgColorDark</item>
        <item name="colorControlActivated">@color/appThemeYellow</item>
    </style>


    <!--Todo Navigation Drawer style ended-->

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>


</resources>
